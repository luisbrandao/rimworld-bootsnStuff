<?xml version="1.0" encoding="utf-8" ?>

<ThingDefs>
  <ThingDef Name="ApparelBootBase" ParentName="ApparelMakeableBase" Abstract="True">
    <generateCommonality>1</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Feet</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
  </ThingDef>


  <ThingDef ParentName="ApparelBootBase">
    <defName>Apparel_boots</defName>
    <label>Boots</label>
    <description>Hard Boots to protect your foot during work.</description>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/boots</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>40</costStuffCount>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <tags>
        <li>Outlander</li>
      </tags>
    </apparel>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>0.4</Mass>
      <WorkToMake>10000</WorkToMake>
      <ArmorRating_Heat>0.02</ArmorRating_Heat>
      <ArmorRating_Blunt>0.02</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.02</ArmorRating_Sharp>
      <DeteriorationRate>0.01</DeteriorationRate>
      <Insulation_Cold>-2</Insulation_Cold>
      <Insulation_Heat>-1</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>+0.2</MoveSpeed>
    </equippedStatOffsets>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.4,0.3,0.15,1)</only>
        </li>
        <li>
          <weight>15</weight>
          <min>RGBA(0.3,0.3,0.3,1)</min>
          <max>RGBA(0.5,0.5,0.5,1)</max>
        </li>
        <li>
          <weight>6</weight>
          <min>RGBA(0.5,0.5,0.5,1)</min>
          <max>RGBA(1,1,1,1)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>


