    <generateCommonality>0.9</generateCommonality>
    <apparel>
      <careIfWornByCorpse>true</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Legs</li>
        <li>Feet</li>
      </bodyPartGroups>
