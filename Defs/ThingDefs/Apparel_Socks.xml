      <DeteriorationRate>0.2</DeteriorationRate>
      <Insulation_Cold>1</Insulation_Cold>
      <Insulation_Heat>1</Insulation_Heat>
    </statBases>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <recipeMaker>
