<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef Name="ApparelGlovesBase" ParentName="ApparelMakeableBase" Abstract="True">
    <statBases>
      <Mass>0.05</Mass>
      <DeteriorationRate>0.1</DeteriorationRate>
    </statBases>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>techmago_bootsnStuff</li>
    </thingCategories>
    <generateCommonality>0.5</generateCommonality>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Hands</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.4,0.3,0.15,1)</only>
        </li>
        <li>
          <weight>15</weight>
          <min>RGBA(0.3,0.3,0.3,1)</min>
          <max>RGBA(0.5,0.5,0.5,1)</max>
        </li>
        <li>
          <weight>6</weight>
          <min>RGBA(0.5,0.5,0.5,1)</min>
          <max>RGBA(1,1,1,1)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  <ThingDef ParentName="ApparelGlovesBase"> <!-- Hand Wraps -->
    <defName>Apparel_handwraps</defName>
    <label>Hand wraps</label>
    <description>A simple wraping help to prevent scratches</description>
    <techLevel>Neolithic</techLevel>
    <recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
			</recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/handWraps</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>15</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>45</MaxHitPoints>
      <WorkToMake>800</WorkToMake>
      <StuffEffectMultiplierArmor>0.030</StuffEffectMultiplierArmor>
      <EquipDelay>0.1</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <WorkSpeedGlobal>+0.01</WorkSpeedGlobal>
      <MiningSpeed>+0.08</MiningSpeed>
      <PlantWorkSpeed>0.08</PlantWorkSpeed>
    </equippedStatOffsets>
    <apparel>
      <tags>
        <li>Tribal</li>
        <li>Outlander</li>
      </tags>
    </apparel>
  </ThingDef>
  <ThingDef ParentName="ApparelGlovesBase"> <!-- Work gloves -->
    <defName>Apparel_work_gloves</defName>
    <label>Work gloves</label>
    <description>A simple pair of gloves. Will protect your fingers and make your job easier.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/gloves</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <costStuffCount>25</costStuffCount>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <WorkToMake>1900</WorkToMake>
      <StuffEffectMultiplierArmor>0.50</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.025</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.025</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <WorkSpeedGlobal>+0.05</WorkSpeedGlobal>
      <GeneralLaborSpeed>+0.05</GeneralLaborSpeed>
      <MiningSpeed>+0.05</MiningSpeed>
      <PlantWorkSpeed>0.05</PlantWorkSpeed>
      <MedicalTendQuality>-0.005</MedicalTendQuality>
      <MedicalTendSpeed>-0.010</MedicalTendSpeed>
      <MedicalSurgerySuccessChance>-0.005</MedicalSurgerySuccessChance>
      <MedicalOperationSpeed>-0.010</MedicalOperationSpeed>
    </equippedStatOffsets>
    <apparel>
      <tags>
        <li>IndustrialBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
        <li>Spacefarer</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  <ThingDef ParentName="ApparelGlovesBase"> <!-- Thick gloves -->
    <defName>Apparel_thick_gloves</defName>
    <label>Thick gloves</label>
    <description>A pair of thick gloves. Great for miners and builders, horrible for medics. Their thickness gives a little more protection.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/glovesThick</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>35</costStuffCount>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <WorkToMake>1600</WorkToMake>
      <StuffEffectMultiplierArmor>0.90</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.025</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.025</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MiningSpeed>+0.15</MiningSpeed>
      <PlantWorkSpeed>+0.15</PlantWorkSpeed>
      <ConstructionSpeed>+0.15</ConstructionSpeed>
      <ConstructSuccessChance>+0.15</ConstructSuccessChance>
      <MedicalTendQuality>-0.05</MedicalTendQuality>
      <MedicalTendSpeed>-0.10</MedicalTendSpeed>
      <MedicalSurgerySuccessChance>-0.05</MedicalSurgerySuccessChance>
      <MedicalOperationSpeed>-0.10</MedicalOperationSpeed>
    </equippedStatOffsets>
    <apparel>
      <tags>
        <li>IndustrialBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
        <li>Spacefarer</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  <ThingDef ParentName="ApparelGlovesBase"> <!-- Medic gloves -->
    <defName>Apparel_medic_gloves</defName>
    <label>Medic gloves</label>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <description>A pair of thin clean gloves. Great for doing Surgeries and tending pacients.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/glovesMedic</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>35</costStuffCount>
    <statBases>
      <MaxHitPoints>20</MaxHitPoints>
      <WorkToMake>3000</WorkToMake>
      <StuffEffectMultiplierArmor>0.00</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.00</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.00</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MedicalTendQuality>+0.05</MedicalTendQuality>
      <MedicalTendSpeed>+0.10</MedicalTendSpeed>
      <MedicalSurgerySuccessChance>+0.05</MedicalSurgerySuccessChance>
      <MedicalOperationSpeed>+0.10</MedicalOperationSpeed>
    </equippedStatOffsets>
  </ThingDef>
  <ThingDef ParentName="ApparelMakeableBase"> <!-- Marine Gloves -->
    <defName>Apparel_Marine_Gloves</defName>
    <label>Marine Gloves</label>
    <description>Marine Gloves designed for enhanced performance.</description>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/glovesMarine</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tradeTags>
      <li>HiTechArmor</li>
      <li>Armor</li>
    </tradeTags>
    <costList>
      <ComponentSpacer>1</ComponentSpacer>
      <Plasteel>40</Plasteel>
      <Uranium>5</Uranium>
    </costList>
   <apparel>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
        <li>Spacefarer</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
      <soundWear>Wear_PowerArmor</soundWear>
      <soundRemove>Remove_PowerArmor</soundRemove>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Hands</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
    </apparel>
    <thingCategories>
      <li>techmago_bootsnStuff</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>0.5</Mass>
      <WorkToMake>10000</WorkToMake>
      <ArmorRating_Sharp>1.0</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
      <ArmorRating_Heat>0.50</ArmorRating_Heat>
      <Insulation_Cold>2</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>

    <equippedStatOffsets>
      <MiningSpeed>+0.2</MiningSpeed>
      <PlantWorkSpeed>+0.2</PlantWorkSpeed>
      <ConstructionSpeed>+0.2</ConstructionSpeed>
      <ConstructSuccessChance>+0.2</ConstructSuccessChance>
      <MedicalTendQuality>-0.05</MedicalTendQuality>
      <MedicalTendSpeed>-0.10</MedicalTendSpeed>
      <MedicalSurgerySuccessChance>-0.05</MedicalSurgerySuccessChance>
      <MedicalOperationSpeed>-0.10</MedicalOperationSpeed>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.3</SlaveSuppressionOffset>
      <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.1</VacuumResistance>
    </equippedStatOffsets>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
    <comps>
      <li Class="CompProperties_Biocodable"/>
    </comps>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
  </ThingDef>
</Defs>
